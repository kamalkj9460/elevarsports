<!-- color-{{ section.settings.color_scheme }} -->
<div class="es-in-section-info-accordion info-accordion  
    {% if section.settings.enable-desktop == false %}hidden-md hidden-lg{% endif %} {% if section.settings.enable-mobile == false %}hidden-xs hidden-sm{% endif %} u-padding-bottom-lg-1 u-margin-bottom-lg-0 u-margin-top-lg-0"
    style="display: flex;{% if section.settings.section-color != blank %}background-color: {{ section.settings.section-color }};{% endif %}{% if section.settings.section-font-color != blank %}color: {{ section.settings.section-font-color }};{% endif %}">
    <div class="info-accordion__container col" style=" flex:1;">
        <div class="info-accordion__tabs">

            {% for slide-count in (1..section.settings.list_count) %}
                {% capture list-heading %}list_heading-{{ slide-count }}{% endcapture %}
                {% capture list-body %}list_body-{{ slide-count }}{% endcapture %}

                {% assign count = slide-count | minus: 1 %}

                <div class="info-accordion-tab">
                        <input type="checkbox" id="rd{{ slide-count }}" name="rd" class="check {{ count }}" onchange="cbChange('{{count }}')">
                        <label class="info-accordion__tab-label" for="rd{{ slide-count }}">
                            {{ section.settings[list-heading] }}
                        </label>
                    <div class="info-accordion__tab-content">
                        {{ section.settings[list-body] }}
                    </div>
                </div>
            {% endfor %}

