<script type="text/javascript">
function cbChange(val) {

    var cbs = document.getElementsByClassName("check");
    
    if(cbs[val].checked == true){
        for (var i = 0; i < cbs.length; i++) {
            cbs[i].checked = false;
        }
        cbs[val].checked = true;
        console.log("IF FALSE", cbs[val]);
    }else{
        cbs[val].checked = false;
    }
}
</script>

