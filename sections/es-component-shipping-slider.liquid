{% schema %}
{
  "name": "slider-basic",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable-mobile",
      "default": true,
      "label": "Enable Mobile"
    },
    {
      "type": "checkbox",
      "id": "enable-desktop",
      "default": true,
      "label": "Enable Desktop"
    },
    {
      "type": "text",
      "id": "classes",
      "label": "Padding/Margin Classes",
      "info": "Add utilities classes separated by space"
    },
    {
        "type": "text",
        "id": "main-heading",
        "label": "Heading",
        "info": "Section Heading"
    },
    {
        "type":"richtext",
        "id":"body",
        "label":"Body",
        "info": "Section Body"
    },
    {
        "type":"radio",
        "id":"text-alignment",
        "options": [
            { "value": "left", "label": "Left" },
            { "value": "right", "label": "right" },
            { "value": "center", "label": "Center" }
        ],
        "label":"Heading Text Alignment",
        "info":"Positioning of text content",
        "default": "left"
    },
    {
        "type":"color",
        "id":"font-color",
        "label":"Font Color",
        "default": "#fff"
    },
    {
        "type":"header",
        "content":"Mobile Content"
    },
    {
        "type": "text",
        "id": "main-heading-mobile",
        "label": "Mobile Heading",
        "info": "Section Heading"
    },
    {
        "type":"richtext",
        "id":"body-mobile",
        "label":"Body",
        "info": "Mobile Section Body"
    },
    {
        "type":"radio",
        "id":"text-alignment-mobile",
        "options": [
            { "value": "left", "label": "Left" },
            { "value": "right", "label": "right" },
            { "value": "center", "label": "Center" }
        ],
        "label":"Heading Text Alignment",
        "info":"Positioning of text content",
        "default": "center"
    },
    {
        "type":"color",
