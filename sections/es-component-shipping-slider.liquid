        "label":"Slider Font Color",
        "default": "#fff"
    },
    {
        "type":"header",
        "content":"First  Slide"
    },
    { 
        "type":"text",
        "id":"slider_heading-1",
        "label":"Heading 1"
    },
    {
        "type":"richtext",
        "id":"slider_body-1",
        "label":"Body"
    },
    {
        "type": "image_picker",
