        "label":"Heading 4"
    },
    {
        "type":"richtext",
        "id":"slider_body-4",
        "label":"Body 4"
    },
    {
        "type": "image_picker",
        "id": "slider_image_4",
        "label": "Slider Image 4"
    },
    {
        "type":"header",
