<link rel="stylesheet" data-href="{{ 'es-component-shipping-slider.css' | asset_url }}">
<link rel="stylesheet" data-href="{{ 'es-utilities.css' | asset_url }}">

<div class="es-component-shipping-slider shipping-slider {% if section.settings.classes != blank %} {{ section.settings.classes }} {% endif %}">
    
    {% if section.settings.enable-desktop %}
        <div class="shipping-slider__desktop--container hidden-xs hidden-sm">

            <!-- Desktop Content  -->
            {% if section.settings.main-heading != blank %}
                <div class="shipping-slider__desktop-text-box" 
                    style="
                        {% if section.settings.text-alignment != blank %}
                            text-align:{{ section.settings.text-alignment }};
                            {% else %}text-align:left;
                        {% endif %}
                        {% if section.settings.font-color != blank %}
                            color:{{ section.settings.font-color }};
                            {% else %}color:rgb(33, 42, 47);
                        {% endif %}

                    ">
                    {% if section.settings.main-heading != blank %}
                    <h2 class="shipping-slider__heading u-margin-bottom-small">
                        {{ section.settings.main-heading }}
                    </h2>
                    {% endif %}
                    {% if section.settings.body != blank %}
                        <div class="shipping-slider__body u-margin-bottom-small">
                            {{ section.settings.body }}
                        </div>
                    {% endif %}
                </div>
            {% endif %}
            <div class="shipping-slider__slider-box" 
                style="
                    {% if section.settings.text-alignment != blank %}
                        text-align:{{ section.settings.text-alignment }};
                        {% else %}text-align:left;
                    {% endif %}
                    {% if section.settings.font-color != blank %}
                        color:{{ section.settings.font-color }};
                        {% else %}color:rgb(33, 42, 47);
                    {% endif %}
                ">
                <div class="shipping-slider__slide">
                    <div class="shipping-slider__image-box" 
                        style="
                            {% if section.settings.text-alignment == 'center' %}
                                margin: 0 auto;
                            {% else %}text-align:left;
                            {% endif %}
                        ">
                        <img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ section.settings.slider_image_1 | img_url: '300x', format: 'pjpg' }}" 
                        alt="" class="shipping-slider__image">
                    </div>
                    <div class="shipping-slider__title" >
                        <h4>
                            {{ section.settings.slider_heading-1 }}
                        </h4>
                    </div>
                    <div class="shipping-slider__description" >
                        {{ section.settings.slider_body-1 }}
                    </div>
                </div>
                <div class="shipping-slider__slide">
                    <div class="shipping-slider__image-box"
                        style="
                            {% if section.settings.text-alignment == 'center' %}
                                margin: 0 auto;
                            {% else %}text-align:left;
                            {% endif %}
                        ">
                        <img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ section.settings.slider_image_2 | img_url: '300x', format: 'pjpg' }}" 
                        alt="" class="shipping-slider__image">
                    </div>
                    <div class="shipping-slider__title">
                        <h4>
                            {{ section.settings.slider_heading-2 }}
                        </h4>
                    </div>
                    <div class="shipping-slider__description">
                        {{ section.settings.slider_body-2 }}
                    </div>
                </div>
                <div class="shipping-slider__slide">
                    <div class="shipping-slider__image-box" 
                        style="
                        {% if section.settings.text-alignment == 'center' %}
                            margin: 0 auto;
                        {% else %}text-align:left;
                        {% endif %}
                        ">
                        <img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ section.settings.slider_image_3 | img_url: '300x', format: 'pjpg' }}" 
                        alt="" class="shipping-slider__image">
                    </div>
                    <div class="shipping-slider__title">
                        <h4>
                            {{ section.settings.slider_heading-3 }}
                        </h4>
                    </div>
                    <div class="shipping-slider__description">
                        {{ section.settings.slider_body-3 }}
                    </div>
                </div>
            </div>
            <!-- Desktop Content  -->
        </div>
    {% endif %}

    {% if section.settings.enable-mobile %}
        <div class="shipping-slider__mobile--container hidden-lg hidden-md">

            <!-- Mobile Content  -->
            {% if section.settings.main-heading-mobile != blank %}
                <div class="shipping-slider__mobile-text-box" 
                    style="
                        {% if section.settings.text-alignment != blank %}
                        text-align:{{ section.settings.text-alignment }};
                        {% else %}text-align:left;
                      {% endif %}
                    ">
                    {% if section.settings.main-heading-mobile != blank %}
                    <h2 class="shipping-slider__heading u-margin-bottom-small">
                        {{ section.settings.main-heading-mobile }}
                    </h2>
                    {% endif %}
                    {% if section.settings.body-mobile != blank %}
                        <div class="shipping-slider__body u-margin-bottom-small">
                            {{ section.settings.body-mobile }}
                        </div>
                    {% endif %}
                </div>
            {% endif %}
            <div class="shipping-slider-mobile">
                <!-- <div class="swiper-wrapper"> -->
                    <div class="shipping-slider__slide-mobile">
                        <div class="shipping-slider__iconbox">
                            <div class="shipping-slider__image-box">
                                <img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ section.settings.slider_image_1 | img_url: '300x', format: 'pjpg' }}" 
                                    alt="" class="shipping-slider__image">
                            </div>
                        </div>
                        <div class="shipping-slider__content" style="color:{{ section.settings.font-color-mobile }}">
                            <div class="shipping-slider__title">
                                <h4>
                                    {{ section.settings.slider_heading-1 }}
                                </h4>
                            </div>
                            <div class="shipping-slider__description">
                                {{ section.settings.slider_body-1 }}
                            </div>
                        </div>
                    </div>

                    <div class="shipping-slider__slide-mobile">

                        <div class="shipping-slider__iconbox">
                            <div class="shipping-slider__image-box">
                                <img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ section.settings.slider_image_2 | img_url: '300x', format: 'pjpg' }}" 
                                alt="" class="shipping-slider__image">
                            </div>
                        </div>
                        <div class="shipping-slider__content" style="color:{{ section.settings.font-color-mobile }}">
                            <div class="shipping-slider__title">
                                <h4>
                                    {{ section.settings.slider_heading-2 }}
                                </h4>
                            </div>
                            <div class="shipping-slider__description">
                                {{ section.settings.slider_body-2 }}
                            </div>
                        </div>
                        
                    </div>

                    <div class="shipping-slider__slide-mobile">

                        <div class="shipping-slider__iconbox">
                            <div class="shipping-slider__image-box">
                                <img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ section.settings.slider_image_3 | img_url: '300x', format: 'pjpg' }}" 
                                alt="" class="shipping-slider__image">
                            </div>
                        </div>
                        <div class="shipping-slider__content" style="color:{{ section.settings.font-color-mobile }}">
                            <div class="shipping-slider__title">
                                <h4>
                                    {{ section.settings.slider_heading-3 }}
                                </h4>
                            </div>
                            <div class="shipping-slider__description">
                                {{ section.settings.slider_body-3 }}
                            </div>
                        </div>

                    </div>

                <!-- </div> -->
                <!-- If we need navigation buttons -->
                <!-- <div class="swiper-pagination"></div> -->
            </div>
            <!-- Mobile Content Ends -->

        </div>
    {% endif %}

</div>

