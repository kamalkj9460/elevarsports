        },
        {
          "type":"header",
          "content":"Text Alignment Settings"
        },
        {
          "type": "radio",
          "id": "text-align-body",
          "options": [
          { "value": "left", "label": "Left"},
          { "value": "center", "label": "Center"},
          { "value": "right", "label": "Right"}
          ],
          "label": "t:sections.image-with-text.blocks.text.settings.text-align-body.label",
          "default":"left"
        }
      ]
    },
    {
      "type": "button",
      "name": "t:sections.image-with-text.blocks.button.name",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
